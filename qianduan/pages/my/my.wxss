/* pages/my/my.wxss */
page {
  background-color: #f4f4f4;
}

.container {
  min-height: 100vh;
}

.header {
  background-color: #1c64f2;
  color: #fff;
  padding: 40rpx 30rpx;
}

.header-content {
  display: flex;
  align-items: center;
  position: relative;
}

.avatar-container {
  margin-right: 30rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
}

.user-info {
  flex-grow: 1;
}

.nickname {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.user-desc {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.login-btn {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  background-color: rgba(255, 255, 255, 0.2);
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
}

.action-section {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
}

.action-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.action-item:last-child {
  border-bottom: none;
}

.action-item text:first-child {
  font-size: 32rpx;
  color: #333;
}

.logout-btn {
  text-align: center;
  color: #ff4d4f;
  padding: 20rpx 0;
  margin-top: 20rpx;
  font-size: 32rpx;
}

.iconfont {
  color: #999;
}
