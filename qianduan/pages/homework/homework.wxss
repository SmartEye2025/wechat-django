/* pages/homework/homework.wxss */
.container {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
  padding: 20rpx 0;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #3a7bd5;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.subject-tabs {
  display: flex;
  overflow-x: scroll;
  white-space: nowrap;
  background-color: white;
  border-radius: 20rpx;
  padding: 15rpx 10rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
}

.tab {
  padding: 15rpx 30rpx;
  margin: 0 10rpx;
  border-radius: 30rpx;
  background-color: #f0f0f0;
  color: #666;
  font-size: 28rpx;
  transition: all 0.3s;
}

.tab.active {
  background-color: #3a7bd5;
  color: white;
  font-weight: bold;
}

.homework-list {
  padding-bottom: 30rpx;
}

.homework-card {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  position: relative;
  overflow: hidden;
}

.homework-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.homework-subject {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  color: white;
}

.homework-subject.chinese {
  background-color: #ff7979;
}

.homework-subject.math {
  background-color: #3dc1d3;
}

.homework-subject.life {
  background-color: #7bed9f;
}

.homework-subject.social {
  background-color: #f3a683;
}

.homework-difficulty {
  font-size: 24rpx;
  color: #666;
}

.level-1 {
  color: #7bed9f;
}

.level-2 {
  color: #f3a683;
}

.level-3 {
  color: #ff7979;
}

.homework-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.subject-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.homework-content {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  line-height: 1.5;
}

.homework-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
}

.deadline {
  color: #999;
}

.status {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
}

.status.pending {
  background-color: #f0f0f0;
  color: #666;
}

.status.submitted {
  background-color: #e3f2fd;
  color: #2196f3;
}

.status.completed {
  background-color: #e8f5e9;
  color: #4caf50;
}

.status.overdue {
  background-color: #ffebee;
  color: #f44336;
}

.footer-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  color: #3a7bd5;
  font-size: 28rpx;
  margin-top: 20rpx;
}

/* 适配特殊儿童的视觉设计 */
.homework-card {
  border-left: 10rpx solid transparent;
  transition: all 0.3s ease;
}

.homework-card:hover {
  transform: translateY(-5rpx);
}

.homework-card:nth-child(1) {
  border-left-color: #ff7979;
}

.homework-card:nth-child(2) {
  border-left-color: #3dc1d3;
}

.homework-card:nth-child(3) {
  border-left-color: #7bed9f;
}

.homework-card:nth-child(4) {
  border-left-color: #f3a683;
}

/* 增强视觉可读性 */
.homework-title {
  font-size: 36rpx;
  letter-spacing: 1rpx;
}

.homework-content {
  line-height: 1.8;
}

/* 增加触摸反馈 */
.tab:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.homework-card:active {
  opacity: 0.9;
  transform: scale(0.99);
}