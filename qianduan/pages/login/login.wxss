page {
  background-color: #f4f4f4;
}

.login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 50rpx 40rpx;
  height: 100vh;
}

.logo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
  animation: logo-bounce 1s ease infinite alternate;
}

@keyframes logo-bounce {
  from {
    transform: translateY(0);
  }
  to {
    transform: translateY(-10rpx);
  }
}

.app-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

.form-container {
  width: 100%;
  max-width: 600rpx;
}

.input-group {
  position: relative;
  margin-bottom: 30rpx;
  transition: all 0.3s ease;
}

.input-group.focus {
  transform: scale(1.02);
}

.input-icon {
  position: absolute;
  left: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #999;
  transition: color 0.3s ease;
}

.input-group.focus .input-icon {
  color: #1c64f2;
}

.login-input {
  width: 100%;
  padding: 20rpx 60rpx 20rpx 60rpx;
  background-color: #fff;
  border: 1px solid #e0e0e0;
  border-radius: 10rpx;
  font-size: 32rpx;
  transition: all 0.3s ease;
}

.input-group.focus .login-input {
  border-color: #1c64f2;
  box-shadow: 0 0 10rpx rgba(28, 100, 242, 0.2);
}

.input-clear {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #999;
  font-size: 36rpx;
  cursor: pointer;
}

.login-button {
  width: 100%;
  padding: 20rpx;
  background-color: #1c64f2;
  color: #fff;
  border: none;
  border-radius: 10rpx;
  font-size: 36rpx;
  margin-top: 30rpx;
  transition: all 0.3s ease;
}

.login-button:disabled {
  background-color: #a0c4ff;
  cursor: not-allowed;
}

.button-hover {
  background-color: #1456d1;
}

.extra-links {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.link {
  color: #1c64f2;
  font-size: 28rpx;
  transition: color 0.3s ease;
}

.link:hover {
  color: #1456d1;
}
