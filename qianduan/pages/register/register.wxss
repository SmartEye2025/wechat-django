.container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  background-color: #f4f4f4;
  padding: 0 30rpx;
}

.register-form {
  width: 100%;
  max-width: 600rpx;
  background-color: white;
  border-radius: 20rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.form-title {
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.input-wrapper {
  display: flex;
  align-items: center;
  border-bottom: 2rpx solid #e0e0e0;
  padding-bottom: 10rpx;
}

.input-field {
  flex-grow: 1;
  font-size: 32rpx;
  color: #333;
}

.input-field.focus {
  color: #007bff;
}

.clear-btn {
  color: #999;
  margin-left: 20rpx;
}

.send-code-btn {
  background-color: #007bff;
  color: white;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  margin-left: 20rpx;
}

.register-btn {
  background-color: #007bff;
  color: white;
  text-align: center;
  font-size: 36rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-top: 40rpx;
  transition: background-color 0.3s;
}

.register-btn:active {
  background-color: #0056b3;
}

.login-link {
  text-align: center;
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #666;
}

.login-link navigator {
  color: #007bff;
  display: inline;
} 